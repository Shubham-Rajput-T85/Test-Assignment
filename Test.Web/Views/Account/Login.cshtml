@model Test.Entity.Models.LoginView;
@{
    ViewData["Title"] = "Login Page";
    @* Layout = "~/Views/Shared/_Layout_login.cshtml"; *@
}


<div class="d-flex flex-column align-items-center">
                <h1>Welcome,</h1>
                    <form asp-controller="Account" asp-action="Login" method="post" id="login_form" style="width: 500px;"> 
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <input asp-for="Email" type="text" class="form-control" placeholder="Email" aria-label="email" >
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3 password-container">
                            <input asp-for="Password" type="text" class="form-control"  placeholder="Password" aria-label="password">
                            <i id="togglePassword" class="eye-icon"></i>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 btn-custom">Login</button>
                    </form>
            </div>

@section Scripts{ @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}}






